<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_uiauth"
    android:label="uiauth"
    app:startDestination="@id/authFragment">

    <fragment
        tools:layout="@layout/fragment_auth"
        android:id="@+id/authFragment"
        android:name="br.com.raphaelmaracaipe.uiauth.ui.auth.AuthFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/goToCountriesFragment"
            app:destination="@id/countriesFragment" />
        <action
            android:id="@+id/goToTeste"
            app:destination="@id/teste" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_countries"
        android:id="@+id/countriesFragment"
        android:name="br.com.raphaelmaracaipe.uiauth.ui.countries.CountriesViewFragment"
        android:label="CountriesFragment" />
    <fragment
        tools:layout="@layout/fragment_test"
        android:id="@+id/teste"
        android:name="br.com.raphaelmaracaipe.uiauth.ui.auth.Teste"
        android:label="Teste" />
</navigation>